    section.hero.is-fullheight 
        .hero-head 
            nav.navbar.is-white 
                .container 
                    .navbar-brand 
                        a.navbar-item(href="/")
                            img(alt="Logo" src="/img/bluemoon.png" sizes="124x92")
                        span.navbar-burger.burger(data-target="navbarMenu")
                            span 
                            span 
                            span 
                    .navbar-menu#navbarMenu 
                        .navbar-start
                            a.navbar-item(href="/")
                                p About
                            a.navbar-item(href="/imprint")
                                p Imprint
                            a.navbar-item(href="/data-protection")
                                p Data-Protection
                            a.navbar-item(href="https://github.com/Blue-Moon-Development" target="_blank")
                                p GitHub
        .hero-body
            .container.has-text-centered           
                block layout-content
        .hero-foot 
            .tabs.is-centered
                ul
                    li
                    a(href="/partner")
